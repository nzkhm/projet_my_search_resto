extends ../layout

block content
    header
        link(href='https://www.w3schools.com/w3css/4/w3.css' rel='stylesheet')
        link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' rel='stylesheet')

        section
            .container
                .row
                    .col-lg-12.text-center
                        form(action="/meals/edit/#{meal._id}" method="POST")
                            .form-group
                                input#mealName.form-control(name="name" type="text" value="#{meal.name}")
                            .form-group
                                input#location.form-control(name="allergies" type="text" value="#{meal.allergies}")
                            .form-group
                                input#neighborhood.form-control(name="ingredients" type="text" value="#{meal.ingredients}")
                            .form-group
                                input#councilDistrict.form-control(name="fk_restaurant" type="text" value="#{meal.fk_restaurant}")
                            .row
                                .form-group
                                    label(for='vegan') Vegan
                                    input#councilDistrict.form-control(name="vegan" type="checkbox")
                                    label(for='halal') Halal
                                    input#councilDistrict.form-control(name="runtime" type="checkbox")
                                    label(for='kosher') kosher
                                    input#councilDistrict.form-control(name="kosher" type="checkbox")
                            .form-group
                                .btn-group
                                    button.btn.btn-warning(type="submit") Edit
                                    button.btn.btn-danger Cancel