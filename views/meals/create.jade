extends ../layout

block content
  section
    .container
      .row
        .col-lg-12.text-center
            form(action="/meals/edit/#{meal._id}", method="POST")
                .form-group
                    label(for='mealName') Name
                    input#mealName.form-control(name="title", type="text", placeholder="Enter the name of a meal")
                .form-group
                    label(for='location') Location
                    input#location.form-control(name="director", type="text", placeholder="Enter the name of the location")
                .form-group
                    label(for='neighborhood') Neighborhood
                    input#neighborhood.form-control(name="summary", type="text", placeholder="Enter a neighborhood")
                .form-group
                    label(for='councilDistrict') Council District
                    input#councilDistrict.form-control(name="runtime", type="text", placeholder="What is the council district")
                .form-group
                    .btn-group
                        button.btn.btn-primary(type="submit") Create
                        button.btn.btn-danger Cancel